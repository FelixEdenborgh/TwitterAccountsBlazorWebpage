@page "/globalnews"

@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Global News</h3>

<div class="container globalnews-background">
    <div class="row">
        <div class="col-md-4">
            <GlobalNews_TwitterFeed />
        </div>
        <div class="col-md-8">
            <div class="link-list mt-3">
                <div class="link-groups d-flex flex-wrap">
                    @foreach (var group in linkGroups)
                    {
                        <div class="link-group-box mt-3 p-2 flex-grow-1">
                            <h5>@group.Header</h5>
                            <ul class="list-group">
                                @foreach (var link in group.Links)
                                {
                                    <li class="list-group-item">
                                        <a href="@link.Url" target="_blank">@link.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary mt-3" @onclick="GoToTwitter">Twitter</button>
</div>

